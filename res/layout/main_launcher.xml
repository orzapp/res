<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="vertical">

	<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="#ff222222"
			android:drawableLeft="@drawable/icon"
			android:drawablePadding="3dip"
			android:gravity="center_vertical"
			android:padding="3.0dip"
			android:text="@string/app_name"
			android:textColor="#fff0f0f0"
			android:textSize="22.0sp"/>

		<LinearLayout
				android:id="@+id/adview_id"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="horizontal"
				android:gravity="center_vertical|center_horizontal">
		</LinearLayout>

	<ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content">
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">


			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="match_parent">

				<Button
						android:id="@+id/main_use_btn"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:drawableTop="@drawable/uselwp"
						android:text="@string/set_lwp_label"
						android:layout_weight="1"/>


				<Button
						android:id="@+id/main_setting_btn"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:drawableTop="@drawable/setting"
						android:text="@string/main_setting_label"
						android:layout_weight="1"/>

				<Button
						android:id="@+id/main_removead_btn"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:drawableTop="@drawable/removead"
						android:text="@string/main_removead_label"
						android:layout_weight="1"/>
				<Button
						android:id="@+id/main_game_btn"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:drawableTop="@drawable/game"
						android:text="@string/main_game_label"
						android:layout_weight="1"/>


			</LinearLayout>
			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="match_parent">
				<Button
						android:id="@+id/app_devid"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:drawableTop="@drawable/morelwp"
						android:text="@string/more_devid_apps_label"
						android:layout_weight="1"/>
				<Button
						android:id="@+id/app_wall"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:drawableTop="@drawable/freeapp"
						android:text="@string/more_free_apps_label"
						android:layout_weight="1"/>
			</LinearLayout>

		</LinearLayout>

	</ScrollView>
</LinearLayout>