							android:title="@string/settings_Interactive_title"/>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/settings_remove_icon_title">
		<CheckBoxPreference android:key="settings_remove_icon_key"
							android:defaultValue="false"
							android:icon="@drawable/removeicon"
							android:title="@string/settings_remove_icon_title"
							android:summary="@string/settings_remove_icon_sum"/>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/more_label">
