<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
				  android:key="soft_setting"
				  android:title="@string/main_setting_label">

	<PreferenceCategory
			android:key="recommended_title"
			android:title="@string/recommended_title">

	</PreferenceCategory>
	<PreferenceCategory android:title="@string/sponsored_label">
		<PreferenceScreen
				android:key="more_free_apps_top"
				android:icon="@drawable/freeapp_setting"
				android:title="@string/more_free_apps_label">
		</PreferenceScreen>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/main_setting_label">
		<CheckBoxPreference android:key="settings_saving_key"
							android:defaultValue="false"
							android:icon="@drawable/saving"
							android:title="@string/settings_fps"
							android:summary="@string/settings_fps_sum"/>

		<CheckBoxPreference android:key="settings_scroll_key"
							android:defaultValue="true"
							android:icon="@drawable/scroll"
							android:title="@string/settings_scrolling_title"
							android:summary="@string/settings_scroll_sum"/>
		<ListPreference android:key="offset_mode_key"
						android:dependency="settings_scroll_key"
						android:title="@string/settings_scroll_speed"
						android:entries="@array/speed_array_title"
						android:entryValues="@array/offset_mode_value"
						android:defaultValue="6"/>
		<CheckBoxPreference android:key="settings_parallax_key"
							android:defaultValue="true"
							android:icon="@drawable/parallax"
							android:title="@string/settings_particle_parallax"/>
