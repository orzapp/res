								android:dependency="settings_parallax_key"
								android:defaultValue="1"
								android:entries="@array/parallax_mode_title"
								android:entryValues="@array/parallax_mode_value"
								android:title="@string/settings_parallax_mode"/>-->

		<CheckBoxPreference android:key="settings_bg_smooth_key"
							android:defaultValue="false"
							android:title="@string/settings_smooth_title"
							android:icon="@drawable/smooth"/>


	</PreferenceCategory>

	<PreferenceCategory android:title="@string/settings_bg_title">
		<CheckBoxPreference android:key="settings_bg_auto_key"
							android:defaultValue="false"
							android:disableDependentsState="true"
							android:icon="@drawable/play"
							android:title="@string/settings_autoPlay_title"
							android:summary="@string/settings_autoPlay_sum"/>
		<ListPreference android:key="settings_bg_select_key"
						android:dependency="settings_bg_auto_key"
						android:defaultValue="0"
						android:entries="@array/bg_select_title"
						android:entryValues="@array/bg_select_value"
						android:icon="@drawable/selectbg"
						android:title="@string/settings_bg_title"/>

<!--		<CheckBoxPreference android:key="settings_localimage_key"
							android:defaultValue="false"
							android:dependency="settings_bg_auto_key"
							android:title="@string/settings_localimage_title"/>
		<Preference android:key="load_image_key"
					android:dependency="settings_localimage_key"
					android:title="@string/load_image_title"/>
		<ListPreference android:key="settings_select_conste_key"
						android:defaultValue="0"
						android:entries="@array/conste_select_title"
						android:entryValues="@array/conste_select_value"
						android:title="@string/settings_conste_title"
						android:icon="@drawable/conste"/>-->
		<CheckBoxPreference android:key="settings_invert_color_key"
							android:dependency="settings_bg_auto_key"
							android:defaultValue="false"
							android:icon="@drawable/invert"
							android:title="@string/settings_invert_colors_title"/>
		<CheckBoxPreference android:key="settings_auto_color_key"
							android:dependency="settings_bg_auto_key"
							android:defaultValue="false"
							android:disableDependentsState="true"
							android:icon="@drawable/autocolor"
							android:title="@string/settings_autoColor_title"/>
		<ListPreference android:key="settings_color_select_key"
						android:dependency="settings_auto_color_key"
						android:defaultValue="0"
						android:entries="@array/color_select_title"
						android:entryValues="@array/color_select_value"
						android:icon="@drawable/color"
						android:title="@string/settings_select_colors_title"/>
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/settings_particle_title">
		<CheckBoxPreference android:key="settings_particle_key"
							android:defaultValue="true"
							android:icon="@drawable/sun"
							android:title="@string/settings_particle_title"
							android:summary="ON/OFF"/>
		<!--		<CheckBoxPreference android:key="settings_particle_mode_key"
									android:dependency="settings_particle_key"
									android:defaultValue="true"
									android:summaryOn="@string/settings_particle_mode_always_title"
									android:summaryOff="@string/settings_particle_mode_flash_title"
									android:title="@string/settings_particle_mode_title"/>-->
